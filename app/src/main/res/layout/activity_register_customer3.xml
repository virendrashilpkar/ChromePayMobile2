<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterCustomer3Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/back_img_frc3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/login_stuff_03" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Customer"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:textColor="#1b2243"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/back_img_frc3"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:scaleType="fitEnd"
            android:src="@drawable/login_stuff_31"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3/3"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:textColor="#1b2243"
            android:textStyle="bold"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_above="@+id/submit_btn_frc3"
        android:layout_below="@+id/back_img_frc3"
        android:background="@drawable/service_card_background"
        android:layout_marginHorizontal="10dp"
        android:elevation="10dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/land_size_l"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/register_cust_drawable"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/login_stuff_21" />

                    <EditText
                        android:id="@+id/et_land_size"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:inputType="text"
                        android:layout_gravity="center"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeMaxTextSize="100sp"
                        android:autoSizeStepGranularity="2sp"
                        android:background="@null"
                        android:layout_marginHorizontal="10dp"
                        android:hint="Land Size"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/register_cust_drawable"
                    android:layout_marginVertical="10dp">

                    <Spinner
                        android:id="@+id/sp_asset_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginHorizontal="5dp"
                        android:src="@drawable/ic_drop_down" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/register_cust_drawable"
                    android:layout_marginVertical="10dp">

                    <Spinner
                        android:id="@+id/sp_asset_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginHorizontal="5dp"
                        android:src="@drawable/ic_drop_down" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/proof_residence_l"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="20dp"
                android:background="@drawable/register_cust_drawable"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/proof_residence_image"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:src="@drawable/register_customer_05" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/et_proof_residence"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center"
                    android:text="Proof of Residence"
                    android:textSize="16dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/local_gov_doc_l"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/register_cust_drawable"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/local_gov_doc_image"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:src="@drawable/register_customer_05" />

                </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/et_local_gov_doc"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="Local Government Doc"
                        android:textSize="16dp"
                        android:layout_marginHorizontal="10dp"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/land_registration_l"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/register_cust_drawable"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/land_registration_image"
                        android:layout_width="50dp"
                        android:layout_height="34dp"
                        android:src="@drawable/register_customer_05" />

                </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/et_land_registration"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="Land Registration"
                        android:textSize="16dp"
                        android:layout_marginHorizontal="10dp"/>

            </LinearLayout>

        </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/submit_btn_frc3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="20dp"
            android:background="@drawable/login_button_background"
            android:text="Submit"
            android:textSize="16dp"
            app:backgroundTint="@null" />

    </RelativeLayout>


</RelativeLayout>