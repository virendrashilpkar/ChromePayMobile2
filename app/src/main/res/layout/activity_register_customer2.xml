<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chromepaymobile.RegisterCustomer2Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">


        <ImageView
            android:id="@+id/back_img_frc2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/login_stuff_03" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Customer"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:textColor="#1b2243"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/back_img_frc2"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:scaleType="fitEnd"
            android:src="@drawable/login_stuff_31"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2/3"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:textColor="#1b2243"
            android:textStyle="bold"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center">


            <TextView
                android:id="@+id/finger_print_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fingerprint"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_above="@+id/fp_msg_tv"
                android:textColor="@color/black"
                android:gravity="center"/>

            <TextView
                android:id="@+id/fp_msg_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_4"
                android:gravity="center"
                android:layout_margin="10dp"
                />


            <ImageView
                android:id="@+id/finger_print"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="30dp"
                android:src="@drawable/login_stuff_25" />

        </LinearLayout>


    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/next_btn_frc2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:backgroundTint="@null"
        android:textSize="16dp"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="20dp"
        android:layout_centerInParent="true"
        android:background="@drawable/login_button_background"
        android:text="Next" />

</RelativeLayout>