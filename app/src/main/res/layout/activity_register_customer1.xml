<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterCustomer1Activity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/back_img_frc1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/login_stuff_03" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Customer"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:textColor="#1b2243"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/back_img_frc1"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:scaleType="fitEnd"
            android:src="@drawable/login_stuff_31"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/3"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:textColor="#1b2243"
            android:textStyle="bold"/>

        <RelativeLayout
            android:id="@+id/scrollable_view_frc1_l"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/next_btn_frc1"
            android:layout_below="@+id/back_img_frc1"
            android:layout_marginVertical="20dp"
            android:background="@drawable/service_card_background"
            android:layout_marginHorizontal="10dp"
            android:elevation="10dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_img_frc1"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginVertical="5dp"
                            android:src="@drawable/login_new_10"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Biometic Facial"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginVertical="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/login_stuff_17"/>

                                <EditText
                                    android:id="@+id/et_name_fcr1"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:inputType="textEmailAddress"
                                    android:layout_gravity="center"
                                    android:autoSizeTextType="uniform"
                                    android:autoSizeMinTextSize="12sp"
                                    android:autoSizeMaxTextSize="100sp"
                                    android:autoSizeStepGranularity="2sp"
                                    android:background="@null"
                                    android:layout_marginHorizontal="10dp"
                                    android:hint="Full Name"/>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#908D8D"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginVertical="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/login_stuff_18"/>

                                <EditText
                                    android:id="@+id/et_mobile_fcr1"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:inputType="number"
                                    android:layout_gravity="center"
                                    android:autoSizeTextType="uniform"
                                    android:autoSizeMinTextSize="12sp"
                                    android:autoSizeMaxTextSize="100sp"
                                    android:maxLength="10"
                                    android:autoSizeStepGranularity="2sp"
                                    android:background="@null"
                                    android:layout_marginHorizontal="10dp"
                                    android:hint="Mobile Number"/>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#908D8D"/>
                        </LinearLayout>
                        <TextView
                            android:layout_marginVertical="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Date of Birth :"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/date_et"
                                android:layout_width="50dp"
                                android:backgroundTint="@null"
                                android:hint="DD"
                                android:editable="false"
                                android:maxLength="2"
                                android:gravity="center"
                                android:inputType="number"
                                android:textSize="12dp"
                                android:layout_marginHorizontal="5dp"
                                android:background="@drawable/dob_edit_background"
                                android:layout_height="30dp"/>

                            <EditText
                                android:id="@+id/month_et"
                                android:layout_width="50dp"
                                android:backgroundTint="@null"
                                android:gravity="center"
                                android:hint="MM"
                                android:maxLength="2"
                                android:textSize="12dp"
                                android:inputType="number"
                                android:layout_marginHorizontal="5dp"
                                android:background="@drawable/dob_edit_background"
                                android:layout_height="30dp"/>

                            <EditText
                                android:id="@+id/year_et"
                                android:layout_width="70dp"
                                android:backgroundTint="@null"
                                android:gravity="center"
                                android:hint="YYYY"
                                android:maxLength="4"
                                android:textSize="12dp"
                                android:inputType="number"
                                android:layout_marginHorizontal="5dp"
                                android:background="@drawable/dob_edit_background"
                                android:layout_height="30dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginVertical="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Gender : "
                                android:textSize="18dp"
                                android:layout_marginVertical="10dp"
                                android:textColor="@color/black"/>

                            <RadioGroup
                                android:id="@+id/radio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/male"
                                    android:layout_marginHorizontal="5dp"
                                    android:text="Male"
                                    android:textColor="@color/black"
                                    />

                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/female"
                                    android:text="Female"
                                    android:layout_marginHorizontal="10dp"
                                    android:textColor="@color/black" />
                            </RadioGroup>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Other Information"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginVertical="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/login_stuff_19"/>

                                <EditText
                                    android:id="@+id/et_email_fcr1"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:inputType="textEmailAddress"
                                    android:layout_gravity="center"
                                    android:autoSizeTextType="uniform"
                                    android:autoSizeMinTextSize="12sp"
                                    android:autoSizeMaxTextSize="100sp"
                                    android:autoSizeStepGranularity="2sp"
                                    android:background="@null"
                                    android:layout_marginHorizontal="10dp"
                                    android:hint="Email"/>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#908D8D"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginVertical="10dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/nationality_ic"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:src="@drawable/login_stuff_20"/>

                                <EditText
                                    android:id="@+id/et_nationality_fcr1"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:inputType="text"
                                    android:layout_gravity="center"
                                    android:autoSizeTextType="uniform"
                                    android:autoSizeMinTextSize="12sp"
                                    android:autoSizeMaxTextSize="100sp"
                                    android:autoSizeStepGranularity="2sp"
                                    android:background="@null"
                                    android:layout_marginHorizontal="10dp"
                                    android:layout_toRightOf="@+id/nationality_ic"
                                    android:hint="Nationality"/>

                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_margin="5dp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:src="@drawable/login_stuff_24"/>
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#908D8D"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginVertical="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/login_stuff_21"/>

                                <EditText
                                    android:id="@+id/et_profession_fcr1"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:inputType="text"
                                    android:layout_gravity="center"
                                    android:autoSizeTextType="uniform"
                                    android:autoSizeMinTextSize="12sp"
                                    android:autoSizeMaxTextSize="100sp"
                                    android:autoSizeStepGranularity="2sp"
                                    android:background="@null"
                                    android:layout_marginHorizontal="10dp"
                                    android:hint="Profession"/>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#908D8D"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginVertical="10dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/login_stuff_22"/>

                                <EditText
                                    android:id="@+id/et_nick_name_fcr1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginHorizontal="10dp"
                                    android:autoSizeMaxTextSize="100sp"
                                    android:autoSizeMinTextSize="12sp"
                                    android:autoSizeStepGranularity="2sp"
                                    android:autoSizeTextType="uniform"
                                    android:background="@null"
                                    android:hint="Name of Kin (Name)"
                                    android:inputType="textPersonName" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#908D8D"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginVertical="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/login_stuff_23"/>

                                <EditText
                                    android:id="@+id/et_phone_no_fcr1"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:inputType="phone"
                                    android:layout_gravity="center"
                                    android:autoSizeTextType="uniform"
                                    android:autoSizeMinTextSize="12sp"
                                    android:autoSizeMaxTextSize="100sp"
                                    android:maxLength="10"
                                    android:autoSizeStepGranularity="2sp"
                                    android:background="@null"
                                    android:layout_marginHorizontal="10dp"
                                    android:hint="Number of Kin (Phone no.)"/>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#908D8D"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>


        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/next_btn_frc1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:backgroundTint="@null"
            android:layout_alignParentBottom="true"
            android:textSize="16dp"
            android:layout_margin="20dp"
            android:layout_centerInParent="true"
            android:background="@drawable/login_button_background"
            android:text="Next" />

    </RelativeLayout>

</RelativeLayout>