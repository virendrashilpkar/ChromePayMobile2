<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chromepaymobile.Fragments.PersonalFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="20dp"
                android:background="@drawable/personal_info_background">

                <RelativeLayout
                    android:id="@+id/parent_image_profile_l"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/image_profile_l"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image_profile"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/image_background"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="20dp"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/home_page_icon_17"
                        android:layout_alignEnd="@+id/image_profile"
                        android:layout_alignBottom="@+id/image_profile"/>

                </RelativeLayout>

                </RelativeLayout>
                <TextView
                    android:id="@+id/name_tv_cus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jessica Chinara"
                    android:textColor="@color/white"
                    android:fontFamily="@font/productsans_medium"
                    android:textSize="20dp"
                    android:layout_above="@+id/phone_no"
                    android:layout_toRightOf="@+id/parent_image_profile_l"/>

                <ImageView
                    android:id="@+id/phone_no_icon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/home_page_icon_20"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/parent_image_profile_l"
                    />

                <TextView
                    android:id="@+id/phone_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginHorizontal="5dp"
                    android:layout_toRightOf="@+id/phone_no_icon"
                    android:text="+234 123-456-7890"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginVertical="10dp"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/parent_image_profile_l"
                    android:layout_below="@+id/phone_no_icon"
                    android:background="@drawable/presonal_did_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="D-ID Ref :"
                        android:textSize="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:textColor="#98A6F4"/>

                    <TextView
                        android:id="@+id/did_ref"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="#######655"
                        android:textSize="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:textColor="#98A6F4"/>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/service_card_background"
                android:elevation="5dp"
                android:orientation="vertical"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/service_card_background"
                    android:elevation="10dp"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="20dp">

                    <ImageView
                        android:id="@+id/finger_print_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/home_page_icon_21"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fingerprint"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@+id/finger_print_img"/>

                    <ImageView
                        android:id="@+id/finger_print_c_uc"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/service_card_background"
                    android:elevation="10dp"
                    android:orientation="vertical"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp">

                    <ImageView
                        android:id="@+id/facial_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icons_16"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Facial Identification"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@+id/facial_img"/>

                    <ImageView
                        android:id="@+id/facial_c_uc"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/service_card_background"
                    android:elevation="10dp"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginHorizontal="20dp">

                    <ImageView
                        android:id="@+id/location_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/address__1_"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loction"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@+id/location_img"/>

                    <ImageView
                        android:id="@+id/location_c_uc"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="10dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Date of Birth"
                                android:layout_weight="1"
                                android:textColor="#98A6F4"/>

                            <TextView
                                android:id="@+id/dob_cus_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="20/05/1994"
                                android:layout_weight="1"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="10dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Profession"
                                android:layout_weight="1"
                                android:textColor="#98A6F4"/>

                            <TextView
                                android:id="@+id/et_profession_cus_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Farmer"
                                android:layout_weight="1"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="10dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Gender"
                                android:layout_weight="1"
                                android:textColor="#98A6F4"/>

                            <TextView
                                android:id="@+id/gender_cus_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Female"
                                android:layout_weight="1"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="10dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Next of Kin(Name)"
                                android:layout_weight="1"
                                android:textColor="#98A6F4"/>

                            <TextView
                                android:id="@+id/nickName_cus_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Mihai Andrei"
                                android:layout_weight="1"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="10dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Next of Kin(Phone No.)"
                                android:textColor="#98A6F4"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/nickPhone_cus_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="+251 123-456-7890"
                                android:layout_weight="1"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="10dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nationality"
                                android:layout_weight="1"
                                android:textColor="#98A6F4"/>

                            <TextView
                                android:id="@+id/nationality_cus_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ethiopian"
                                android:layout_weight="1"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="10dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Address"
                                android:layout_weight="1"
                                android:textColor="#98A6F4"/>

                            <TextView
                                android:id="@+id/address_cus_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/text_8"
                                android:layout_weight="1"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginVertical="20dp"
                        android:layout_marginHorizontal="10dp">

                        <LinearLayout
                            android:id="@+id/national_id_btn"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/ni_pr_button_background"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_gravity="center"
                                android:src="@drawable/home_page_icon_24"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="National ID"
                                android:layout_gravity="center"
                                android:textColor="@color/white"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/proof_residence_btn"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ni_pr_button_background"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_gravity="center"
                                android:src="@drawable/home_page_icon_25"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/text_9"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </ScrollView>
</FrameLayout>