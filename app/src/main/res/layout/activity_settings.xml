<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chromepaymobile.SettingsActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/back_img_setting"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/login_stuff_03" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:textColor="#1b2243"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/back_img_setting"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:scaleType="fitEnd"
            android:src="@drawable/login_stuff_31"
            android:layout_alignParentEnd="true"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/back_img_setting"
                android:layout_margin="20dp">

                <RelativeLayout
                    android:id="@+id/edit_profile_l"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:elevation="10dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/service_card_background"
                    android:layout_marginVertical="10dp">

                    <TextView
                        android:id="@+id/edit_profile_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edit Profile"
                        android:fontFamily="@font/opensans_semibold"
                        android:textSize="16dp"
                        android:layout_marginHorizontal="10dp"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/stuff_09"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="10dp"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/change_password_l"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:elevation="10dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/service_card_background"
                    android:layout_marginVertical="10dp">

                    <TextView
                        android:id="@+id/change_password_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Change Password"
                        android:fontFamily="@font/opensans_semibold"
                        android:textSize="16dp"
                        android:layout_marginHorizontal="10dp"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/stuff_09"
                        android:layout_marginHorizontal="10dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

            </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/log_out_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:backgroundTint="@null"
            android:layout_marginHorizontal="10dp"
            android:text="Log Out"
            android:textSize="18dp"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/productsans_regular"
            android:layout_marginVertical="30dp"
            android:background="@drawable/login_button_background"/>

    </RelativeLayout>
</RelativeLayout>