<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/parent_l_cdb"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:elevation="5dp"
        android:background="@drawable/service_card_background">

        <LinearLayout
            android:id="@+id/profile_img_cdb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="5dp"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/image_card_background">

            <ImageView
                android:id="@+id/dash_ic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:src="@drawable/login_stuff_12"/>
        </LinearLayout>


        <TextView
            android:id="@+id/profile_tv_cdb"
            android:layout_toRightOf="@+id/profile_img_cdb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:fontFamily="@font/opensans_regular"
            android:textColor="@color/black"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/login_stuff_11"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</LinearLayout>