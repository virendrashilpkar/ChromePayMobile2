<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/service_card_background"
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Installment No."
                android:textColor="@color/black"
                android:textSize="12dp"
                android:fontFamily="@font/opensans_semibold"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:id="@+id/install_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/black"
                android:fontFamily="@font/opensans_semibold"
                android:layout_gravity="center"
                android:gravity="center"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Installment Date"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/opensans_semibold"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/install_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11/16/2022"
                        android:layout_marginHorizontal="10dp"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/black"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pay Date"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/opensans_semibold"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/pay_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11/16/2022"
                        android:layout_marginHorizontal="10dp"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/black"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Installment Pay Amount"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/opensans_semibold"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/install_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="267500"
                        android:layout_marginHorizontal="10dp"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/black"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/opensans_semibold"
                        android:layout_centerVertical="true"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/status_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/pass_button_background"
                        android:text="Paid"
                        android:clickable="false"
                        android:layout_alignParentEnd="true"
                        android:textColor="#42aef8"
                        app:backgroundTint="@null" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>